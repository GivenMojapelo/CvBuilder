<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.givenchdy.cvbuilder.cvbuilder.Main.CvEducationSecondarySchool">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="0dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_height="match_parent">


        <EditText
            android:id="@+id/schoolNameID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapCharacters"
            android:layout_marginTop="0dp"
            android:gravity="center_horizontal"
            android:background="@drawable/edittextstyle"
            android:hint="School Name"/>

        <EditText
            android:id="@+id/schoolCityID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapCharacters"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:background="@drawable/edittextstyle"
            android:hint="City"/>

        <EditText
            android:id="@+id/highestGradePassedID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:background="@drawable/edittextstyle"
            android:hint="Highest Grade Passed"/>

        <EditText
            android:id="@+id/yearPassedID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:background="@drawable/edittextstyle"
            android:hint="Year Passed"/>

        <EditText
            android:id="@+id/muralsID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:maxLines="3"
            android:background="@drawable/boxedittext"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:hint="Extra Mural Activities"/>

        <EditText
            android:id="@+id/subjectsID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:background="@drawable/boxedittext"
            android:minLines="5"
            android:maxLines="14"
            android:hint="Subjects"/>


    </LinearLayout>

</FrameLayout>
