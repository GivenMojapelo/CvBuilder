<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.givenchdy.cvbuilder.cvbuilder.Main.CvPersonalDetailsFragmentPart3">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="0dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/cellNoID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:background="@drawable/edittextstyle"
            android:layout_marginTop="0dp"
            android:gravity="center_horizontal"
            android:hint="Cell No"/>

        <EditText
            android:id="@+id/emailID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:layout_marginTop="20dp"
            android:background="@drawable/edittextstyle"
            android:gravity="center_horizontal"
            android:hint="Email Address"/>

        <EditText
            android:id="@+id/postAddressID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/boxedittext"
            android:gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:inputType="textMultiLine"
            android:minLines="5"
            android:maxLines="5"
            android:hint="Postal Address"/>

        <EditText
            android:id="@+id/resAddressID"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:background="@drawable/boxedittext"
            android:inputType="textMultiLine"
            android:minLines="5"
            android:maxLines="5"
            android:gravity="center_horizontal"
            android:hint="Residential Address"/>


    </LinearLayout>



</LinearLayout>
