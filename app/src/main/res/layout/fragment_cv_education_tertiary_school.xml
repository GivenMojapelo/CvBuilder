<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.givenchdy.cvbuilder.cvbuilder.Main.CvEducationTertiarySchool">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="0dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_height="match_parent">


        <EditText
            android:id="@+id/institutionNameID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapCharacters"
            android:layout_marginTop="0dp"
            android:gravity="center_horizontal"
            android:background="@drawable/edittextstyle"
            android:hint="Institution Name"/>


        <EditText
            android:id="@+id/qualificationNameID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapCharacters"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:background="@drawable/edittextstyle"
            android:hint="Qualification Obtained"/>


        <EditText
            android:id="@+id/yearObtainedID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:background="@drawable/edittextstyle"
            android:hint="Year Obtained"/>

        <EditText
            android:id="@+id/subjectsID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:maxLines="14"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:background="@drawable/boxedittext"
            android:hint="Subjects"/>

        <EditText
            android:id="@+id/skillsID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:maxLines="5"
            android:background="@drawable/boxedittext"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:hint="Skills"/>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addNewInstitutionID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_input_add"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center|bottom"
        app:backgroundTint="@color/colorPrimaryDark"
        android:background="@color/colorPrimaryDark"/>

</android.support.design.widget.CoordinatorLayout>
